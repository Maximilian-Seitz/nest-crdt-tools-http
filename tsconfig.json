{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "nodenext",
		"target": "es6",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}